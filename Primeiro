#include<stdio.h>
#include<stdlib.h>
//este algoritimo calcula a Média das notas escolares dos alunos 
int main()
{
    //espaço de variaveis	
	
    float nota1,nota2,nota3,media; 
     
    printf("digite a nota1: "); 
    scanf("%f",&nota1);
    printf("digite a nota2: ");
	scanf("%f",&nota2);
	printf("digite a nota3: ");
	scanf("%f",&nota3); 
	media=(nota1+nota2+nota3)/3;
	if(media>=6.0)
	printf("Aluno Aprovado com media: %1.f", media); 
	else if ((media>=5.0)&& (media<6.0))
	printf("Aluno Recuperacao com media: %1.f", media);
	else 
	printf("Aluno Reprovou com media: %1.f", media);
	return 0;		
}
